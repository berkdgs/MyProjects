@model List<Person>
@foreach (var item in Model)
{
	if (Model.Count > 0)
	{
		<div class="media">
			<div class="media-left">
				<img src="@item.ImagePath" class="media-object" style="width:60px">
			</div>
			<div class="media-body">
				<h4 class="media-heading">@item.BirthDate.ToString("dd MMMM")</h4>
				<p>Sayın @item.Name @item.LastName, doğum gününüzü içten dileklerimizle kutlar, sağlık, başarı ve mutluluklar dileriz. <br/>PAS Yönetimi</p>
			</div>
		</div>
	}
}

		