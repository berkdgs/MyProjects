@model Department
@{
    ViewBag.Title = "Add";
}

<h2>Departman Ekle</h2>
@using (Html.BeginForm("Add","Department", new { area = "Human" }, FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(x => x.Name, "Adı:")
		@Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Description, "Açıklama:")
		@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
	</div>
	<input class="btn btn-success" type="submit" name="btnKaydet" value="Kaydet" />
}
