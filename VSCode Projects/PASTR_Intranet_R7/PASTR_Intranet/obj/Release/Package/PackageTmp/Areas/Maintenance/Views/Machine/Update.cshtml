@model Machine
@{
	ViewBag.Title = "Güncelleme";
}

<h2>Makine Güncelle</h2>
@using (Html.BeginForm("Update", "Machine", new { area = "Maintenance" }, FormMethod.Post))
{
	@Html.HiddenFor(x => x.Id)
	<div class="form-group">
		@Html.LabelFor(x => x.Name, "Makine Adı")
		@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Description, "Açıklama")
		@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
	</div>
	<input class="btn btn-success" type="submit" name="btnKaydet" value="Kaydet" />
}
