@model Department
@{
    ViewBag.Title = "Departman Güncelle";
}

@using (Html.BeginForm("Update", "Department", new { area = "Human" }, FormMethod.Post))
{
	@Html.HiddenFor(x => x.Id)
	<div class="form-group">
		@Html.LabelFor(x => x.Name, "Adı")
		@Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Description, "Açıklama")
		@Html.TextBoxFor(x => x.Description, new { @class = "form-control"})
	</div>
	<button class="btn btn-info" name="btnKaydet">Kaydet</button>
}

