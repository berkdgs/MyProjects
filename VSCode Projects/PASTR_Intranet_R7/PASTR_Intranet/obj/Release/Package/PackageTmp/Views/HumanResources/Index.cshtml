@model List<Person>
@{
	ViewBag.Title = "Index";
}

<table class="table table-striped">
	<caption>
		<div class="row">
			<div class="col-sm-10 col-lg-10">
				<h2>Çalışanlarımız</h2>
			</div>
		</div>
	</caption>
	<thead>
		<tr>
			<th>Fotoğraf</th>
			<th>Ad</th>
			<th>Soyad</th>
			<th>Cinsiyet</th>
			<th>Doğum Tarihi</th>
			<th>Departman</th>
			<th>Unvan</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<img src="@item.ImagePath" alt="@item.LastName@item.Name" style="width:80px;height:100px;" />
				</td>
				<td>@item.Name</td>
				<td>@item.LastName</td>
				<td>@(item.Gender ? "Erkek" : "Kadın") </td>
				<td>@item.BirthDate.ToString("dd MMMM")</td>
				<td>@item.Department.Name</td>
				<td>@item.Position.Name</td>
			</tr>
		}
	</tbody>
</table>
