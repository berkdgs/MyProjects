@model List<String>
<div class="panel panel-default">
	<div class="panel-heading text-center"><b>T.C.M.B Kurlar - @ViewBag.Tarih  </b></div>
	<div class="panel-body text-center">
		<table class="table table-responsive">
				<tr>
					<th class="text-center">Para Birimi</th>
					<th class="text-center">Satış Kuru (₺)</th>
				</tr>
			<tr>
				<td>USD</td>
				<td>@Model[0]</td>
			</tr>
			<tr>
				<td>EUR</td>
				<td>@Model[1]</td>
			</tr>
			<tr>
				<td>POUND</td>
				<td>@Model[2]</td>
			</tr>
		</table>


	</div>
	<div class="panel-footer text-center">
		<a class="btn bg-primary glyphicon glyphicon-eye-open" href="https://www.tcmb.gov.tr/kurlar/kurlar_tr.html"> Tüm Kurlar (T.C.M.B.)</a>
	</div>
</div>

