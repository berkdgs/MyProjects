<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-default" href="/">
					<img src="~/images/logo/PAS_logo_A_4c.bmp" alt="logo" style="width:240px;margin-top:2px;" />
				</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Çalışanlarımız", "Index", "Home")</li>
					<li>@Html.ActionLink("Departmanlar", "Index", "Department")</li>
					<li>@Html.ActionLink("Pozisyonlar", "Index", "Position")</li>

				</ul>
				<p class="nav navbar-text navbar-right">Merhaba, @User.Identity.Name</p>
			</div>
		</div>
	</div>
	@if (TempData[Message.MessageName] != null)
	{
		foreach (var item in (List<Message>)TempData[Message.MessageName])
		{
			String cls = "";
			if (item.Type == MessageType.Success)
			{
				cls = "alert-success";
			}
			else if (item.Type == MessageType.Warning)
			{
				cls = "alert-warning";
			}
			else if (item.Type == MessageType.Danger)
			{
				cls = "alert-danger";
			}

			<div class="row">
				<div class="col-md-12 col-lg-12">
					<div class="alert @cls" id="PageAlertBox" @(item.Duration.HasValue ? "data-duration=" + item.Duration : "")>
						@if (item.Closeable)
						{
							<button class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						}
						@Html.Raw(item.Text)
					</div>
				</div>
			</div>
		}
	}
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
		</footer>
	</div>

	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	@RenderSection("validateScripts", false)
	<script>
		if ($('#PageAlertBox').length > 0) {
			debugger
			var time = $('#PageAlertBox').attr("data-duration");
			if (time != null && time != undefined) {
				time = time * 1000;
				$('#PageAlertBox').fadeTo(time, 500).slideUp(500, function () {
					$('#PageAlertBox').alert('close');
				})
			}
		}
	</script>
</body>
</html>