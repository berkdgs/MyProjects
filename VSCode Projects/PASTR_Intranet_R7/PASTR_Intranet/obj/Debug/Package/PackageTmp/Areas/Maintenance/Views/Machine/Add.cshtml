@model Machine
@{
	ViewBag.Title = "Makine Ekle";
}

<div class="row">
	
	<div class="col-lg-5 col-md-5 col-sm-8 col-xs-10">
		<h2 class="h1 bg-primary text-center panel-heading">Makine Ekle</h2>
		@using (Html.BeginForm("Add", "Machine", new { area = "Maintenance" }, FormMethod.Post, new { @class = "form-group" }))
		{
			<div class="form-group form-group-sm">
				@Html.LabelFor(x => x.Name, "Makine Adı")
				@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
			</div>
			<div class="form-group form-group-sm">
				@Html.LabelFor(x => x.Description, "Açıklama")
				@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
			</div>
			<input class="btn btn-success btn-sm" type="submit" name="btnKaydet" value="Kaydet" />
		}
	</div>
</div>