@model List<Position>
@{
    ViewBag.Title = "Index";
}

<table class="table table-striped">
	<caption>
		<div class="row">
			<div class="col-md-10 col-lg-10">
				<h2>Pozisyonlar</h2>
			</div>
			<div class="col-md-2 col-lg-2" style="padding:20px;">
				<form action="/Human/Position/Add" method="get">
					<button class="btn btn-success" name="btnPozisyonEkle">Pozisyon Ekle</button>
				</form>
			</div>
		</div>
	</caption>
	<thead>
		<tr>
			<th colspan="2"></th>
			<th colspan="3">Oluşturma</th>
			<th colspan="3">Değiştirme</th>
			<th colspan="2"></th>
		</tr>
		<tr>
			<th>Ad</th>
			<th>Açıklama</th>
			<th>Tarih</th>
			<th>Bilgisayar</th>
			<th>Kullanıcı</th>
			<th>Tarih</th>
			<th>Bilgisayar</th>
			<th>Kullanıcı</th>
			<th>Çalışan Sayısı</th>
			<th>İşlem</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Position item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Description</td>
				<td>@item.CreatedDate</td>
				<td>@item.CreatedComputerName</td>
				<td>@item.CreatedUserName</td>
				<td>@item.ModifiedDate</td>
				<td>@item.ModifiedComputerName</td>
				<td>@item.ModifiedUserName</td>
				<td>@item.People.Count(x => x.Status != NTier.Core.Enums.Status.Deleted).ToString()</td>
				<td>
					<a class="btn btn-danger" href="/Human/Position/Delete/@item.Id">Sil</a>
					<a class="btn btn-warning" href="/Human/Position/Update/@item.Id">Değiştir</a>
				</td>
			</tr>
		}
	</tbody>
</table>

