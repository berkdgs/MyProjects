@model Operation
@{
	ViewBag.Title = "Bakım İşlemi";
}

<div class="row">
	<div class="col-lg-5 col-md-5 col-sm-7 col-xs-10">
		<h2>Bakım İşlemi</h2>
		@using (Html.BeginForm("Update", "Operation", new { area = "Maintenance" }, FormMethod.Post, new { @class = "form-group-sm" }))
		{
			@Html.HiddenFor(x => x.Id, new { Value = Model.Id})
			@Html.HiddenFor(x => x.MachineId, new { Value = Model.MachineId })
			@Html.HiddenFor(x => x.WorkerId, new { Value = Model.WorkerId })
			<div class="form-group-sm">
				@Html.LabelFor(x => x.Machine.Name, "Makine Adı")
				@Html.TextBox("machineName", Model.Machine.Name, new { @readonly = "readonly", @class = "form-control" })
			</div>
			<div class="form-group-sm">
				@Html.LabelFor(x => x.Worker.Name, "Bakım Personeli Adı")
				@Html.TextBox("workerName", Model.Worker.LongName, new { @readonly = "readonly", @class = "form-control" })
			</div>
			<div class="form-group-sm">
				@Html.LabelFor(x => x.Notification.Problem, "Arıza/Bakım Kısa Açıklaması")
				@Html.TextArea("problem", Model.Notification.Problem, new { @readonly = "readonly", @class = "form-control" })
			</div>
			<div class="form-group-sm">
				@Html.LabelFor(x => x.Process, "İşlem Açıklaması")
				@Html.TextAreaFor(x => x.Process, new { @class = "form-control"})
			</div>
			<div class="form-group-sm">
				@Html.LabelFor(x => x.ProcessStatu, "Durum")
				@Html.EnumDropDownListFor(x => x.ProcessStatu, new { @class="form-control"})
			</div>
			<button class="btn btn-success glyphicon glyphicon-floppy-save pull-right"> Kaydet</button>
		}
	</div>
</div>
