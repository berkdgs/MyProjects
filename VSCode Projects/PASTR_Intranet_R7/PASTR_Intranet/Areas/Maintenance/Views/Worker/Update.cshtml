@model Worker
@{
    ViewBag.Title = "Güncelle";
}

<div class="row">
	<div class="col-lg-5 col-md-5 col-sm-7 col-xs-10">
		<h2 class="bg-primary text-center">Bakım Personeli Güncelle</h2>
		@using (Html.BeginForm("Update", "Worker", new { area = "Maintenance" }, FormMethod.Post, new { @class = "form-group-sm" }))
		{
			@Html.HiddenFor(x => x.Id)
			<div class="form-group-sm">
				@Html.LabelFor(x => x.Name, "Adı")
				@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
			</div>
			<div class="form-group-sm">
				@Html.LabelFor(x => x.LastName, "Soyadı")
				@Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
			</div>
			<div class="form-group-sm">
				@Html.LabelFor(x => x.Perfection, "Yekinlik")
				@Html.TextBoxFor(x => x.Perfection, new { @class = "form-control" }) @*Burası veritabanına gerekli ekleme yapıldıktan sonra dropdown yapılabilir.*@
			</div>
			<button class="btn btn-success" name="btnKaydet">Kaydet</button>
		}
	</div>
</div>

